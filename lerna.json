{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "publish": {
      "allowBranch": [
        "master"
      ],
      "createRelease": "github"
    },
    "version": {
      "message": "Prepare for release",
      "conventionalCommits": true
    }
  },
  "ignoreChanges": [
    "**/test/**",
    "lerna.json",
    "**/*.md"
  ]
}
